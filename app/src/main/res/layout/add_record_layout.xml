<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="240dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/border_first_mouvement"
    android:layout_marginBottom="30dp"
    android:id="@+id/layoutRecord"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="100dp">

    <TextView
        android:id="@+id/title"
        android:text="Ajouter un record"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:fontFamily="@font/assistant_extrabold"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/nom_record"
        tools:text="Nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:fontFamily="@font/assistant_semibold"
        android:layout_below="@id/title"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/categorie_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple"
        tools:text="Categorie"
        android:fontFamily="@font/assistant_light"
        android:layout_below="@id/nom_record"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/addRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:fontFamily="@font/assistant_semibold"
        android:layout_below="@id/categorie_record"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addRecord"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <include
            android:id="@+id/button"
            layout="@layout/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp" />

        <include
            android:id="@+id/button_back"
            layout="@layout/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



    </LinearLayout>

</RelativeLayout>