<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCD6F7"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin"
            android:fontFamily="@font/assistant_extrabold"
            android:text="@string/titleApp"
            android:textColor="#3E92CC"
            android:textSize="106sp"
            android:typeface="normal"
            android:layout_marginBottom="@dimen/marginTitle"
            android:layout_alignStart="@id/textView2"
            android:layout_alignEnd="@id/textView2"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerInParent="true"
        android:fontFamily="@font/assistant_extrabold"
        android:text="@string/titleApp2"
        android:textColor="#3E92CC"
        android:textSize="106sp"
        android:typeface="normal" />


            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginBottom="@dimen/defmargin"
                android:layout_below="@id/textView2"
                android:backgroundTint="#FEFFFF"
                android:fontFamily="@font/assistant_extrabold"
                android:text="Crossfit"
                android:textColor="#3E92CC"
                android:textSize="40sp"
                app:cornerRadius="@dimen/borderRadius"
                android:layout_alignStart="@id/textView2"
                android:layout_alignEnd="@id/textView2"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@id/button"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/assistant_extrabold"
                android:text="@string/buttonRun"
                android:textColor="#3E92CC"
                android:textSize="40sp"
                android:typeface="normal"
                app:cornerRadius="@dimen/borderRadius"
                android:layout_alignStart="@id/textView2"
                android:layout_alignEnd="@id/textView2"/>

</RelativeLayout>