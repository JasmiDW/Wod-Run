<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#DCD6F7" /> <!-- Couleur de fond de l'icône quand l'item est sélectionné -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Couleur de fond de l'icône quand l'item n'est pas sélectionné -->
        </shape>
    </item>
</selector>